@model List<SAPSCaseManagement5.ViewModels.AuditLogViewModel>

<div class="container mt-5 p-4 bg-light rounded shadow-lg">
    <div class="text-center mb-4">
        <h2 class="display-5">Audit Logs</h2>
        <p class="text-muted">View recent actions and changes made within the system.</p>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center">
            <h3>No Audit Logs Available</h3>
            <p>There are currently no audit logs to display.</p>
        </div>
    }
    else
    {
        <div class="table-responsive mb-4">
            <table class="table table-striped table-hover align-middle border rounded">
                <thead class="table-primary">
                    <tr>
                        <th>ID</th>
                        <th>Action</th>
                        <th>User</th>
                        <th>Timestamp</th>
                        <th>Details</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var log in Model)
                    {
                        <tr>
                            <td>@log.Id</td>
                            <td>@log.Action</td>
                            <td>@log.User</td>
                            <td>@log.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")</td>
                            <td>@log.Details</td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="d-flex justify-content-end mt-3">
                <a href="javascript:history.back()" class="btn btn-secondary btn-lg">Return Back</a>
            </div>
        </div>
    }
</div>

