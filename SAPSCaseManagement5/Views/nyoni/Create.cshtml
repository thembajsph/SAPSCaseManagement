@model SAPSCaseManagement5.Models.nyoni


<h2>Edit Criminal Record for @Model.SuspectId</h2>

<form asp-action="Create">
    <input type="hidden" asp-for="SuspectId" value="@ViewBag.SuspectId" />
    <div class="form-group">
        <label asp-for="Offense" class="control-label"></label>
        <input asp-for="Offense" class="form-control" />
        <span asp-validation-for="Offense" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Sentence" class="control-label"></label>
        <input asp-for="Sentence" class="form-control" />
        <span asp-validation-for="Sentence" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IssueDate" class="control-label"></label>
        <input asp-for="IssueDate" class="form-control" />
        <span asp-validation-for="IssueDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>



