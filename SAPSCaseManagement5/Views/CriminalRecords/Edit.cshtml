@model SAPSCaseManagement5.ViewModels.CriminalRecordFormViewModel

<!-- Success and Error Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<!-- Validation Summary -->
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<h2>Edit Criminal Record for @Model.SuspectId</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()

    <!-- Hidden field for SuspectId -->
    <input type="hidden" asp-for="SuspectId" />

    @* <!-- Dropdown for Offense -->
    <div class="form-group">
        <label for="OffenseId">Offense</label>
        <select asp-for="OffenseId" class="form-control" asp-items="Model.OffenseList">
            <option value="">Select Offense</option>
        </select>
        <span asp-validation-for="OffenseId" class="text-danger"></span>
    </div> *@

    <div class="form-group">
        <label for="OffenseId">Select Offense</label>
        <select asp-for="OffenseId" class="form-control" asp-items="Model.OffenseList">
            <option value="">Select Offense</option>
        </select>
        <span asp-validation-for="OffenseId" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label for="IssueDate">Issue Date</label>
        <input asp-for="IssueDate" type="date" class="form-control" />
        <span asp-validation-for="IssueDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="CaseManagerId">Assign Case Manager</label>
        <select asp-for="CaseManagerId" class="form-control" asp-items="Model.CaseManagers">
            <option value="">Select Case Manager</option>
        </select>
        <span asp-validation-for="CaseManagerId" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label for="Status">Status</label>
        <input asp-for="Status" class="form-control" />
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update Record</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
