@model SAPSCaseManagement5.Models.CriminalRecord

<!-- Success and Error Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<!-- Validation Summary -->
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<h2>Record Criminal Offense</h2>

<form asp-action="Create" method="post">
    <!-- Hidden field for SuspectId -->
    <input type="hidden" asp-for="SuspectId" value="@ViewData["SuspectId"]" />

    <div class="form-group">
        <label for="Offense">Offense</label>
        <input asp-for="Offense" class="form-control" />
        <span asp-validation-for="Offense" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Sentence">Sentence (in months)</label>
        <input asp-for="Sentence" class="form-control" />
        <span asp-validation-for="Sentence" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="IssueDate">Issue Date</label>
        <input asp-for="IssueDate" type="date" class="form-control" />
        <span asp-validation-for="IssueDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Status</label>
        <input asp-for="Status" class="form-control" />
        <span asp-validation-for="Status" class="text-danger"></span>
        </div>

    @* <div class="form-group">
        <label for="CaseManagerId">Assign Case Manager</label>
        <select asp-for="CaseManagerId" class="form-control">
            <option value="">Select Case Manager</option>
            @foreach (var item in ViewBag.CaseManagers as SelectList)
            {
                <option value="@item.Value">@item.Text</option>
            }
        </select>
        <span asp-validation-for="CaseManagerId" class="text-danger"></span>
    </div> *@

    <button type="submit" class="btn btn-primary">Add Record</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


